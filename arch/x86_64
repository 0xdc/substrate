mach=amd64
targets=(
	mergeusr:stage1
	mergeusr:stage2
	mergeusr:stage3

	mergeusr:stage4
	mergeusr:users

	mergeusr:livecd-stage1
	mergeusr:livecd-stage2
	mergeusr:livecd-stage3

	minimal:embedded
	minimal:livecd-stage2
	minimal:livecd-stage3

	openstack:controller
	router:stage1

	minimal:nginx
	minimal:murmur

	#https://bugs.gentoo.org/688330
	sso:stage4

	dev:stage4
)

case "${date}" in
*01)
	targets+=(
		plasma:stage2
		plasma:stage3
		plasma:stage4

		plasma:livecd-stage1
		plasma:livecd-stage2
		plasma:livecd-stage3

		plasma-sso:stage4
	)
esac

upstream="$mach"

case "$(hostname)" in
pulsar)
	nproc=$(nproc --ignore=4)
	test -d ${BASE_DIR}/tmp || mkdir ${BASE_DIR}/tmp
	mountpoint -q ${BASE_DIR}/tmp || mount -t tmpfs -o size=95% tmpfs ${BASE_DIR}/tmp
	;;
maple)
	targets+=(
		hardfp:stage1:armv7l
		hardfp:stage2:armv7l
		hardfp:stage3:armv7l
		hardfp:stage4:armv7l
		ella:systemd:armv7l
		ella:stage4:armv7l

		systemd:stage1:armv7l
		systemd:stage2:armv7l
		systemd:stage3:armv7l
		systemd:stage4:armv7l

		xorg:stage4:armv7l
		xorg:systemd:armv7l
	 )
	 ;;
esac
