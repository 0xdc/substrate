mach=amd64
targets=(
	systemd:stage1
	systemd:stage2
	systemd:stage3

	systemd:stage4

	systemd:livecd-stage1
	systemd:livecd-stage2
	systemd:livecd-stage3

	minimal:embedded
	minimal:livecd-stage2
	minimal:livecd-stage3

	minimal:systemd

	openstack:controller
	router:stage1

	minimal:nginx

	#https://bugs.gentoo.org/688330
	sso:stage4

	dev:stage4
)

plasma=(
	plasma:stage1
	plasma:stage2
	plasma:stage3
	plasma:stage4

	plasma:livecd-stage1
	plasma:livecd-stage2
	plasma:livecd-stage3

	plasma-sso:stage4

	duet:livecd-stage1
	duet:livecd-stage2
	duet:livecd-stage3
)

gnome=(
	gnome:stage1
	gnome:stage2
	gnome:stage3
	gnome:stage4
)

armv7a=(
	hardfp:stage1:armv7l
	hardfp:stage2:armv7l
	hardfp:stage3:armv7l
	hardfp:stage4:armv7l
	ella:stage4:armv7l

	systemd:stage1:armv7l
	systemd:stage2:armv7l
	systemd:stage3:armv7l
	#systemd:stage4:armv7l
	ella:systemd:armv7l

	xorg:stage4:armv7l
	#xorg:systemd:armv7l
)

upstream="$mach"

case "$(hostname)" in
pulsar)
	test -d ${BASE_DIR}/tmp || mkdir ${BASE_DIR}/tmp
	mountpoint -q ${BASE_DIR}/tmp || mount -t tmpfs -o size=95% tmpfs ${BASE_DIR}/tmp
	targets+=( ${plasma[*]} ${gnome[*]} )
	;;
maple)
	targets+=( ${plasma[*]} ${armv7a[*]} )
	;;
esac

case "${date}" in
*01)
	targets+=( ${gnome[*]} )
	;;
esac
