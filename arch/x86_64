arch=amd64
targets=(
	systemd:stage1
	systemd:stage2
	systemd:stage3

	router:stage1

	mergeusr:stage1
	mergeusr:stage2
	mergeusr:stage3

	minimal:embedded
	minimal:livecd-stage2
	minimal:livecd-stage3
)

upstream="$arch"

case "$(hostname)" in
pulsar)
	test -d ${BASE_DIR}/tmp || mkdir ${BASE_DIR}/tmp
	mountpoint -q ${BASE_DIR}/tmp || mount -t tmpfs -o size=95% tmpfs ${BASE_DIR}/tmp
	;;
esac
