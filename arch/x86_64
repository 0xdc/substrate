arch=amd64
targets=(
	systemd:stage1
	systemd:stage2
	systemd:stage3

	systemd:stage4

	systemd:livecd-stage1
	systemd:livecd-stage2
	systemd:livecd-stage3

	mergeusr:stage1
	mergeusr:stage2
	mergeusr:stage3

	mergeusr:stage4
	mergeusr:users

	minimal:embedded
	minimal:livecd-stage2
	minimal:livecd-stage3

	openstack:controller
	router:stage1

	minimal:nginx
	minimal:murmur

	#https://bugs.gentoo.org/688330
	sso:stage4

	dev:stage4
)

case "${date}" in
*01)
	targets+=(
		plasma:stage2
		plasma:stage3
		plasma:stage4

		plasma:livecd-stage1
		plasma:livecd-stage2
		plasma:livecd-stage3

		plasma-sso:stage4
	)
esac

upstream="$arch"

case "$(hostname)" in
pulsar)
	test -d ${BASE_DIR}/tmp || mkdir ${BASE_DIR}/tmp
	mountpoint -q ${BASE_DIR}/tmp || mount -t tmpfs -o size=95% tmpfs ${BASE_DIR}/tmp
	;;
esac
